<mapper namespace="com.mbc.mjy_test0906.book.BookService">
     <insert id="insertb">
insert into booktest values(booknumber_seq.nextval,#{param1},#{param2},#{param3},#{param4},#{param5},#{param6},#{param7},0)
</insert>
<select id="bout" resultType="com.mbc.mjy_test0906.book.BookDTO">
select booknumber,bookname,writer,bookcompany,price,to_char(bookdate,'yyyy-MM-dd')bookdate,content,cover,breadcnt from booktest
</select>
<select id="bdetail" resultType="com.mbc.mjy_test0906.book.BookDTO">
	select booknumber,bookname,writer,bookcompany,price,to_char(bookdate,'yyyy-MM-dd')bookdate,content,cover,breadcnt from booktest where booknumber =#{param1}
</select>
<update id="readcnt">
	update booktest set breadcnt = breadcnt + 1 where booknumber =#{param1}
</update>
<select id="delete" resultType="com.mbc.mjy_test0906.book.BookDTO">
	select booknumber,bookname,writer,bookcompany,price,to_char(bookdate,'yyyy-MM-dd')bookdate,content,cover from booktest where booknumber =#{param1}
</select>
<delete id="delete2">
